---
import '../styles/global.css'
---

<div class="relative h-screen bg-black overflow-hidden">

  <!-- Canvas starfield background -->
  <canvas id="starfield" class="fixed inset-0 w-full h-full pointer-events-none"></canvas>

  <!-- Snap scroll container - hidden scrollbar -->
  <div id="scroll-container" class="relative z-10 h-screen overflow-y-auto snap-y snap-mandatory scroll-smooth">

    <!-- Section 0: Hero -->
    <section data-section="0" class="snap-start h-screen flex items-center justify-center p-4">
      <div id="hero-card" class="glass-card backdrop-blur-xl bg-gradient-to-br from-white/8 to-white/3 border border-white/15 shadow-[0_8px_32px_0_rgba(0,0,0,0.5),inset_0_1px_0_0_rgba(255,255,255,0.08)] rounded-3xl p-12 max-w-4xl w-full">
        <div class="relative">
          <h1 class="font-bold text-6xl md:text-7xl text-white leading-tight tracking-tight drop-shadow-2xl">
            Faulkner Engineering
            <span class="block text-white/60 text-4xl md:text-5xl font-light mt-2">LLC</span>
          </h1>
          <div class="w-24 h-px bg-gradient-to-r from-white/60 via-white/40 to-transparent mt-6 shadow-[0_0_10px_rgba(255,255,255,0.3)]"></div>
          <p class="text-white/80 text-xl font-light max-w-2xl mt-6">
            Educate. Architect. Build.
          </p>
        </div>
      </div>
    </section>

    <!-- Section 1: Pillars -->
    <section data-section="1" class="snap-start h-screen flex items-center justify-center p-4">
      <div id="pillars-card" class="glass-card backdrop-blur-xl bg-gradient-to-br from-white/8 to-white/3 border border-white/15 shadow-[0_8px_32px_0_rgba(0,0,0,0.5),inset_0_1px_0_0_rgba(255,255,255,0.08)] rounded-3xl p-8 md:p-12 max-w-6xl w-full">

