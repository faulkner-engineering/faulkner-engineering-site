                <path d="M32 4L56 18V46L32 60L8 46V18L32 4Z" stroke="rgba(255,255,255,0.3)" stroke-width="1" fill="none"/>
                <path d="M32 16L44 23V37L32 44L20 37V23L32 16Z" stroke="rgba(255,255,255,0.5)" stroke-width="1" fill="none"/>
                <circle cx="32" cy="30" r="4" fill="white" class="group-hover:drop-shadow-[0_0_8px_rgba(255,255,255,0.6)] transition-all duration-300"/>
